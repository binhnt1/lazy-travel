<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@android:style/Theme.Material.Light.NoActionBar">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- OAuth deep link handler for PocketBase redirect -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- For development with emulator (localhost) -->
                <data android:scheme="http" android:host="10.0.2.2" android:port="8090" android:path="/api/oauth-redirect" />

                <!-- For development with machine IP address (replace 192.168.1.x with your IP) -->
                <!-- <data android:scheme="http" android:host="192.168.1.x" android:port="8090" android:path="/api/oauth-redirect" /> -->

                <!-- For production with domain (replace yourdomain.com with your domain) -->
                <!-- <data android:scheme="https" android:host="yourdomain.com" android:path="/oauth-callback" /> -->
            </intent-filter>
        </activity>
    </application>
</manifest>
